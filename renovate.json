{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "customManagers:dockerfileVersions",
        "group:all"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "docker.io/library/node"
            ],
            "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-alpine3.21)?$",
            "versioning": "node"
        }
    ]
}
